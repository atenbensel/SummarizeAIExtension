{
  "manifest_version": 3,
  "name": "Summarize AI",
  "version": "1.0",
  "description": "Chrome extension to summarize web pages",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Summarize AI",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}
